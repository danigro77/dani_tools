<% provide(:title, 'Edit user') %>
<% provide(:h1_title, "Update your profile") %>
<% provide(:footer_title, "update_profile") %>

<%= render 'shared/error_messages', :target => @user %>

<div class="form center" id="edit_form">

   <%= form_for(@user) do |f| %>
   
      <%= render 'fields', f: f %>

      <%= f.submit "Save changes", class: "button1 edit_button" %>

      <div id="picture_edit">
         <%= gravatar_for @user %>
         <a href="http://gravatar.com/emails" target="_blank">change</a>
      </div>

   <% end %>

</div>




